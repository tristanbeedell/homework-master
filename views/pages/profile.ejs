<!DOCTYPE html>
<html>

<% title = `${user.displayName+(user.displayName.slice(-1)=='s'?"'":"'s")} Profile`%>
<% include ../partials/head %>

<body>
	<% if (user.id == member.id) { %>
	THIS IS YOUR PROFILE. <a href="/me">Customise</a>
	<% } %>
	<div class="header">
		<h1>
			<img src="<%= user.user.avatarURL %>" class="profilePic"></img>
			<div id="usernameContainer">
				<%= user.displayName%>
			</div>
		</h1>
	</div>
	<div class="content">
		<% if (userData.rows[0].bio) { %>
		<div class="post">
			<div class="message"><%- userData.rows[0].bio %></div>
		</div>
		<% } %>
		<div class="post">
			<div class="title">Timetable</div>
			<% include ../partials/user_timetable %>
		</div>
	</div>
	<% include ../partials/menu %>
	<script src="/js/index.js"></script>
</body>

</html>