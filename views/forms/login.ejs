<div class='error'></div>
<form method="post" id="login">
	<label for="guild">Discord Server:</label>
	<select name="guild" id="guild">
		<% bot.guilds.forEach(guild => {%>
		<option value="<%= guild.id %>">
			<%= guild.name %>
		</option>
		<% }) %>
	</select>
	<label for="name">
		Name:
	</label>
	<input type="text" name="name" id="name">
	<label for="password">
		Password:
	</label>
	<input type="password" name="password" id="password" onchange="validateLogin()">
	<br>
	<input type="button" value="OK" onclick="login()">
</form>