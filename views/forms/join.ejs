<form method="post">
	<label for="guild">Group</label>
	<select name="guild" id="guild"
		<% if (wrong === 'guild') {%>
		onchange="
			this.onchange = null;
			this.style = null
		"
		style="border: 1px solid red"
		<% } %>>
		<option value="0">
			choose your school
		</option>
		<% bot.guilds.forEach(guild => {%>
		<option value="<%= guild.id %>" <% if (query.choice==guild.id) {%>
			selected="selected"
			<%}%>>
			<%= guild.name %>
		</option>
		<% }) %>
	</select>
	<label for="pin">Group Pin</label>
	<input type="password" name="pin" id="pin"
	<% if (wrong === 'pin') {%>
	onchange="
		this.onchange = null;
		this.style = null
	"
	style="border: 1px solid red"
	<% } %>>
	<br>
	<input type="submit" class="link" value="OK">
</form>